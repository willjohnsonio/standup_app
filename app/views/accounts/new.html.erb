<div class="content-header"> 
  <div class="container-fluid">
    <div class="row mb-2"> <div class="col-sm-6">
      <h1 class="m-0 text-dark">New Account Information</h1> </div>
    </div>
  </div>
</div>
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
              <%= form_for @account, html:{class: 'form-horizontal'} do |f| %> 
              <% if @account.errors.any? %>
                <div class="alert alert-error alert-block alert-fixed">

</div>
<% end %>
<div class="form-group">
<%= f.label :name, class: 'control-label col-lg-2' %> <div class="col-lg-10">
<%= f.text_field :name, placeholder: 'Enter your Accounts Name', class: 'form-control' %>
                </div>
              </div>
<div class="form-group">
<div class="col-lg-offset-2 col-lg-10">
<%= f.submit "Sign In", class: "btn btn-primary" %>
 </div>
</div>
<% end %> 
</div>
        </div>
      </div>
    </div>
  </div>
</section>